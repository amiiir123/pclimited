<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title"><%= blog._id ? 'Update' : 'Add' %> Add new Blog</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-12">
        <form id="dataForm" action="<%= blog._id ? `update/blog/${blog._id}` : 'add/blog' %>" method="POST" enctype="multipart/form-data">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="d-grid">
                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Title</label>
                                    <input type="text" id="simpleinput" class="form-control" name="title" value="<%= blog.title || '' %>" >
                                </div>
                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Description</label>
                                    <input type="text" id="simpleinput" class="form-control" name="description" value="<%= blog.description || '' %>">
                                </div>
                                <div class="mb-3">
                                    <div class="form-floating">
                                        <select class="form-select" id="floatingSelect" form="dataForm" aria-label="Floating label select example" name="category">
                                            <option selected disabled>Action</option>
                                            <% categories.forEach(cat => { %>
                                                <option value="<%= cat.name %>" <%= blog.category === cat.name ? 'selected' : '' %>><%= cat.name %></option>
                                            <% }) %>
                                        </select>
                                        <label for="floatingSelect">Take your category</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Keywords</label>
                                <input type="text" id="simpleinput" class="form-control" name="keywords" value="<%= blog.keywords || '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="inputpreview" class="form-label">preview img ( size : 328x218 )</label>
                                <input type="file" id="inputpreview" class="form-control" name="file"  >
                                <input type="hidden" name="myimg" value="<%= blog.thub || ''  %>">
                                <img src="<%= blog.thub  %>" alt="please add image" width="70" height="70">


                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="d-grid">
                                <div id="snow-editor" style="height: 300px;">
                                    <h3><span class="ql-size-large">Hello World!</span></h3>
                                    <p><br></p>
                                    <h3>This is a simple editable area.</h3>
                                    <p><br></p>
                                    <ul>
                                        <li>Select a text to reveal the toolbar.</li>
                                        <li>Edit rich document on-the-fly, so elastic!</li>
                                    </ul>
                                    <p><br></p>
                                    <p>End of simple area</p>
                                </div>
                                <input type="hidden" id="content" name="content" value="<%= blog.content || '' %>">
                                <input type="hidden" id="oldcontent" name="oldcontent" value="<%= blog.content || '' %>">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-info"><%= blog._id ? 'Update' : 'Add' %> Blog</button>
            </div>
        </form>
    </div>
    
</div>
